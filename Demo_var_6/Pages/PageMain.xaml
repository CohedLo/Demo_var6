<Page x:Class="Demo_var_6.Pages.PageMain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Demo_var_6.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageMain">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
            <StackPanel Orientation="Vertical">
                <Button Name="btnService" Content="Услуги" Click="BtnService_Click" Style="{StaticResource mainBtn}"/>
                <Button Name="btnClient" Content="Клиенты" Style="{StaticResource mainBtn}"/>
                <Button Name="btnProduct" Content="Товары" Click="BtnProduct_Click" Style="{StaticResource mainBtn}"/>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Button Name="btnAddProd" Content="Добавить товар" Style="{StaticResource mainBtn}"/>
                <Button Name="btnStuff" Content="Сотрудники" Style="{StaticResource mainBtn}"/>
                <Button Name="btnCompany" Content="Компания" Style="{StaticResource mainBtn}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
